<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.txm.topcodes.animationpracticeapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".SysApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CoordinateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ViewPropertyAnimationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AnimatedVectorDrawableActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RevealOrHideActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MoveActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>